<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>
	
	<appender name="junits" class="org.apache.log4j.RollingFileAppender">
    	<param name="File" value="./junits.log"/>
    	<param name="MaxFileSize" value="10240KB"/>
   	 	<param name="MaxBackupIndex" value="6"/>
    	<layout class="org.apache.log4j.TTCCLayout">
      		<param name="DateFormat" value="ISO8601"/>
    	</layout>
  	</appender>
	<!-- 
		Logs everything that Hibernate does. Usually 
		this is too much detail but this will show things
		like retrieval from the L1 cache, etc.
	 -->
	<logger name="org.hibernate" additivity="false">
		<level value="fatal" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	<!-- 
	VERY USEFUL INFO HERE. Shows the following information:
		- What gets Flushed and when.
		- When items are read from the Session cache.
		- When a proxy is created rather than going to the database.
	-->
	<logger name="org.hibernate.event.def" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	<logger name="org.hibernate.proxy" additivity="false">
		<level value="trace" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>	
	<logger name="org.hibernate.loader" additivity="false">
		<level value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>	
	<!-- Shows the activity in the level-2 cache -->
	<logger name="org.hibernate.cache" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	
	<!-- Shows the SQL that Hibernate Generates. NOTE: this SQL is not always executed! -->
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	
	<!-- Shows all JDBC resource acquisition - usually not very interesting -->
	<logger name="org.hibernate.jdbc" additivity="false">
		<level value="error" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	
	<!-- Shows the transaction related activity -->
	<logger name="org.hibernate.transaction" additivity="false">
		<level value="error" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	
	<!-- Shows all of Hibernates bind parameters to and from a query -->
	<logger name="org.hibernate.type" additivity="false">
		<level value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</logger>
	
	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="junits" />
	</root>

</log4j:configuration>




