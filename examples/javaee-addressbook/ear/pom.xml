<project>
   <modelVersion>4.0.0</modelVersion>
   <groupId>org.resteasy.examples</groupId>
   <artifactId>javaee-addressbook-ear</artifactId>
   <packaging>ear</packaging>
   <version>1.0</version>
   <name>RESTEasy Contact Book Example EAR Assembly</name>
   <parent>
      <groupId>org.resteasy.examples</groupId>
      <artifactId>javaee-addressbook</artifactId>
      <version>1.0</version>
   </parent>
   <dependencies>
      <dependency>
            <groupId>org.resteasy.examples</groupId>
            <artifactId>javaee-addressbook-war</artifactId>
            <version>1.0</version>
            <type>war</type>
         </dependency>
         <dependency>
            <groupId>org.resteasy.examples</groupId>
            <artifactId>javaee-addressbook-ejb</artifactId>
            <version>1.0</version>
            <type>ejb</type>
         </dependency>
   </dependencies>
   <build>
      <plugins>
         <plugin>
            <artifactId>maven-ear-plugin</artifactId>
            <configuration>
               <archive>
                  <manifest>
                     <addClasspath>true</addClasspath>
                  </manifest>
               </archive>
            </configuration>
         </plugin>
      </plugins>
   </build>
</project>
